rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function canRead() {
      return isAuthenticated();
    }

    function canWrite() {
      return isAuthenticated();
    }

    // Tickets collection
    match /tickets/{ticketId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canWrite();
    }

    // Ticket Suggestions collection
    match /ticket_suggestions/{suggestionId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canWrite();
    }

    // Feedback Sources collection
    match /feedback_sources/{feedbackId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canWrite();
    }

    // User Profiles collection
    match /user_profiles/{profileId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canWrite();
    }

    // Integration Configs collection
    // Users can only read/write their own configs
    match /integration_configs/{configId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // Clusters collection
    match /clusters/{clusterId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canWrite();
    }

    // Events collection (activity log)
    match /events/{eventId} {
      allow read: if canRead();
      allow create: if canWrite();
      // Events are immutable once created
      allow update, delete: if false;
    }

    // Ticket Feedback Links (junction table)
    match /ticket_feedback_links/{linkId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow delete: if canWrite();
      // No updates needed for junction tables
      allow update: if false;
    }

    // Loop Messages collection
    match /loop_messages/{messageId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canWrite();
    }

    // Outreach Log collection
    match /outreach_log/{logId} {
      allow read: if canRead();
      allow create: if canWrite();
      allow update: if canWrite();
      allow delete: if canWrite();
    }

    // Feedback Engagement Snapshots
    match /feedback_engagement_snapshots/{snapshotId} {
      allow read: if canRead();
      allow create: if canWrite();
      // Snapshots are immutable
      allow update, delete: if false;
    }

    // Deny all other documents by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
